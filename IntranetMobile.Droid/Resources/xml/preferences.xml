<?xml version="1.0" encoding="utf-8" ?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
	<android.support.v7.preference.PreferenceCategory
			android:title="Notifications">
        <android.support.v7.preference.SwitchPreferenceCompat
        			  android:title="Vibration"
                      android:key="@string/pref_vibration"
					  android:defaultValue="true"
                      android:summary="Vibrate when notification is received"/>
		<android.support.v7.preference.SwitchPreferenceCompat
        			  android:title="News"
                      android:key="@string/pref_news"
					  android:defaultValue="true"
                      android:summary="Notify about company news"/>
		<android.support.v7.preference.SwitchPreferenceCompat
        			  android:title="Reviewer"
                      android:key="@string/pref_reviewer"
					  android:defaultValue="true"
                      android:summary="Notify about new Reviewer tickets"/>
    </android.support.v7.preference.PreferenceCategory>
	
</android.support.v7.preference.PreferenceScreen>